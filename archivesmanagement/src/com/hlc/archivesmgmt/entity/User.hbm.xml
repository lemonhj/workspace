<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hlc.archivesmgmt.entity">
    <class name="com.hlc.archivesmgmt.entity.User" table="base_sys_user" lazy="true">
        <id name="id" column="id" type="integer">
            <generator class="identity" />
        </id>
        <property name="username" column="username" type="string" length="20" />
        <property name="password" column="password" type="string" length="20" />
       
    </class>
</hibernate-mapping>